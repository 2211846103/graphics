{
    "version": "2.0.0",
    "tasks": [

        // BUILD TASK
        {
            "type": "shell",
            "label": "C/C++: build project",
            "command": "g++.exe",
            "args": [
                // including additional headers
                "-I${workspaceFolder}/include",
                // library files
                "-L${workspaceFolder}/libs",
                // library args
                "-lglfw3 -lgdi32",
                // exe file path
                "-o build/graphics", 
                // source files
                "${workspaceFolder}/src/*.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },

        // CLEAN TASK
        {
            "type": "shell",
            "label": "C/C++: clean project",
            "command": "rm",
            "args": [
                "-r",
                "${workspaceFolder}/build/*"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }

    ]
}